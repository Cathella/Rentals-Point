<main class="container">
  <p id="notice"><%= notice %></p>
  <div class="d-flex justify-content-between align-items-center">
    <h1 class="font-weight-bold">Popular Searches</h1>
    <%= link_to 'List a Rental', new_rental_path, class: "btn bg-yellow font-weight-bold px-4 shadow" %>
  </div>

  <div class="mt-5">
    <div class="row">
      <% @rentals.each do |rental| %>
        <div class="col-lg-3">
          <div class="bg-light rounded mb-4 py-5 text-center">Image</div>
          <div>
            <%= rental.name %>
          </div>
          <div>
            <%= rental.location %>
          </div>
          <div>
            Ugx. <%= rental.price %> / Month
          </div>
        </div>
      <% end %>
    </div>
  </div>
</main>
